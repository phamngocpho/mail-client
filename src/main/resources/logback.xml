<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Set default log directory với fallback về logs (thư mục gốc project) -->
    <property name="LOG_DIR" value="${LOG_DIR:-${user.dir}/logs}" />

    <!-- Console Appender - Log ra console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - Log ra file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/email-app.log</file>

        <!-- Rolling policy - Tự động tạo file mới theo ngày -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/email-app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- Giữ log 30 ngày -->
            <totalSizeCap>1GB</totalSizeCap> <!-- Tổng dung lượng tối đa -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error File Appender - Log riêng cho ERROR -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/email-app-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/email-app-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
    </root>

    <!-- Logger riêng cho package -->
    <logger name="controllers" level="INFO" />
    <logger name="services" level="INFO" />
    <logger name="protocols.imap" level="INFO" />
    <logger name="components" level="INFO" />
    <logger name="components.panels.dashboard.Inbox" level="INFO" />
    <logger name="components.panels.dashboard.Settings" level="DEBUG" />
    <logger name="utils" level="INFO" />

    <!-- Tắt log verbose của thư viện bên ngoài -->
    <logger name="javax.mail" level="WARN" />
    <logger name="com.sun.mail" level="WARN" />

</configuration>